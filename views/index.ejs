<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/png" href="./img/pokedex.png"/>
    <title>Pokédex</title>
</head>
<body>
         <nav>
            <article>
                <img src="./img/pokebola.png" id = "pokedexinicio">
                <h1><a href="/">Pokédex</a></h1>
            </article>
            <% if(message != "") {  %>
                <section id="message">
                    <p><%= message %></p> <span id="close">&times;</span>
                </section>
            <% }  %>
            <ul>
                <ul>
                    <li><a href="/">Início</a></li>
                    <li><a href="/cadastro">Cadastro</a></li>
                </ul>
            </ul>
        </nav>
        <header>
            <h1>Pokédex</h1>
            <figure>
                <img src="/img/pokedex.png" width="100" height="80" alt="pokedex titulo">
            </figure>
        </header>
        <section id="pokedex">
            <% pokedex.forEach((item, index)=> { %>
                <a class="card" href="/detalhes/<%= index %>">
                    <img src="<%= item.imagem %>" alt="">
                    <h2>
                        <%= item.nome %>
                    </h2>
                    <h4>
                        <%= item.tipo %>
                    </h4>
                </a>
                <% }) %>
        </section>
    
        <script src="/js/script.js"></script>
    
    
    
</body>
</html>